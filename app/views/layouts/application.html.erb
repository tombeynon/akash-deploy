<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Akash Deploy UI</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-dark border-bottom shadow-sm">
      <p class="h5 my-0 me-md-auto fw-normal">
      <%= image_tag("akash-logo.jpg", width: 200) %>
      </p>
      <% if keyring_password? %>
        <nav class="my-2 my-md-0 me-md-3">
          <%= link_to 'Home', root_path, class: 'p-2 text-light' %>
          <%= link_to 'Wallet', wallet_path, class: 'p-2 text-light' %>
          <% if @akash.wallet.exists? %>
            <%= link_to 'Deployments', deployments_path, class: 'p-2 text-light' %>
          <% end %>
          <%= link_to 'Market', "ticker/ticker", class: 'p-2 text-light' %>
          <%= link_to 'Keplr', "keplr/keplr", class: 'p-2 text-light' %>
          <%= link_to 'Close wallet', password_path, method: :delete, class: 'p-2 text-light' %>
        </nav>
      <% end %>
      <%# <a class="btn btn-outline-primary" href="#">Sign up</a> %>
    </header>

    <main class="container">
      <% flash.each do |key, value| %>
        <div role="alert" class="<%= flash_class(key) %>">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>

      <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
          <div class="col">
            Version: <%= @akash.cli.version %><br />
            Node: <%= @akash.cli.rpc_node %><br />
            Latest Block: <%= @akash.block_height %> (<%= @akash.block_time.strftime('%e %b %Y %H:%M:%S') %>)
          </div>
          <div class="col">
            <p class="text-right" style="text-align:right">
              <%= link_to 'Deploy UI Github', 'https://github.com/tombeynon/akash-deploy', target: '_blank' %><br />
              <%= link_to 'Akash Documentation', 'https://docs.akash.network/', target: '_blank' %><br />
              <%= link_to 'Akash Network | The Unstoppable Cloud', 'https://akash.network/', target: '_blank' %><br />
            </p>
          </div>
        </div>
      </footer>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  </body>
</html>
